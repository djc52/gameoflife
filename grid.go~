// Grid contains the array of cells
package main

type Grid struct {
	genIndex  int
	maxCol    int
	maxRow    int
	gridCells [][]Cell

	// function to create new grid with size
}

func (grid *Grid) MaxCol() int { return grid.maxCol }
func (grid *Grid) MaxRow() int { return grid.maxRow }

// function to create new cell with input values
func NewGrid(maxCol int, maxRow int) *Grid {
	grid := new(Grid)
	grid.maxCol = maxCol
	grid.maxRow = maxRow
	grid.gridCells = make([][]Cell,maxCol)
	for j := range grid {
		grid[j] = make([]Cell,maxRow)
	}
	return grid 
}
